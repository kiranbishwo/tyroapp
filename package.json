{
  "name": "tempo---ai-time-&-attendance",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development vite\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "npm run build && electron-builder --dir",
    "postinstall": "node scripts/rebuild-check.cjs || echo '⚠️  Native rebuild skipped - app will use PowerShell fallback (this is OK!)'",
    "postinstall:force": "electron-rebuild",
    "postinstall:skip": "echo 'Skipping native module rebuild'"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "active-win": "^9.0.0",
    "axios": "^1.7.7",
    "electron-store": "^10.1.0",
    "keytar": "^7.9.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.1",
    "@types/node": "^20.11.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.tempo.app",
    "productName": "Tempo",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
